            "    //   searchContentJsonPath: '對應到欄位的資料結構',",
            "    // });",
            "",
            "    this.initForm();",
            "    this.initExProps();",
            "",
            "    this.cdr.detectChanges();",
            "  }",
            "",
            "  /** 初始化form */",
            "  initForm() {",
            "    // this.addFormControl('formControl', null, [Validators.required]);",
            "    this.setControlStatus();",
            "  }",
            "",
            "  /** 設定控制項狀態 */",

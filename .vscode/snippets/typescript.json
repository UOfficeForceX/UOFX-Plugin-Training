            "    }",
            "    else {",
            "      this.form.disable();",
            "    }",
            "  }",
            "",
            "  /** 初始化屬性 */",
            "  initExProps() {",
            "    if (!this.exProps) {",
            "      this.exProps = {",
            "        // formControl: 'default value',",
            "      };",
            "    }",
            "",
            "    this.form.setValue(this.exProps);",
            "  }",
            "}"
        ],
        "description": "Create props constructor"
    },

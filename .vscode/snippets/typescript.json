        "body": [
            "import { Component, OnInit } from \"@angular/core\";",
            "import { UofxDialog } from \"@uofx/web-components/dialog\";",
            "",
            "// TODO: 貼上整串 @Component()",
            "",
            "export class /* TODO: 貼上 component name */ extends UofxDialog implements OnInit {",
            "",
            "   constructor() {",
            "     super();",
            "   }",
            "",
            "   ngOnInit() { }",
            "",
            "   // 點擊取消",
            "   canClose() {",
            "     this.close();",
            "     return true;",
